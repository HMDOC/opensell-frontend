{
    "compilerOptions": {
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "paths": {
            "@animations/*": ["./src/components/animations/*"],
            "@components/*": ["./src/components/*"],
            "@shared/*": ["./src/components/shared/*"],
            "@services/*": ["./src/services/*"],
            "@pages/*": ["./src/pages/*"],
            "@entities/*": ["./src/entities/*"],
            "@css/*": ["./src/css/*"],
            "@context/*": ["./src/context/*"]
        }
    }
}